<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
          <!-- bootstrap -->
          <link rel="stylesheet" href="{{ asset('bundles/hsdonsec/css/bootstrap.min.css') }}">
          <link rel="stylesheet" href="{{ asset('bundles/hsdonsec/css/font-awesome.min.css') }}">
          <!-- custom hacks -->
          <link rel="stylesheet" href="{{ asset('bundles/hsdonsec/css/Style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <header id="row">
        {% block header%}
           <div id="col-md-12">
               <div class="navbar navbar-mainmain">
                   <div class="col-md-2">
                       <img src="{{ asset('bundles/hsdonsec/images/hsd-marke-v1-hsd-rotrgb-m-schw.png') }}" class="logo" alt="logo">
                   </div>
                   <div class="col-md-8" style="text-align: center">
                       <h2>OnSec - Online Sicherheitsunterweisungstool</h2>
                   </div>
               </div>
           </div>
        {% endblock %}
      </header>
      <div class="container">
        {% block body %}{% endblock %}
        {% block javascript %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js" integrity="sha384-XTs3FgkjiBgo8qjEjBk0tGmf3wPrWtA6coPfQDfFEY8AnYJwjalXCiosYRBIBZX8" crossorigin="anonymous"></script>
        <script src="{{ asset('bundles/hsdonsec/js/bootstrap.min.js') }}" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>
        {% endblock %}
      </div>
    </body>
</html>
