{% extends 'base.html.twig' %}

{% block content %}
    <h1>Keyword</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ keyword.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ keyword.description }}</td>
            </tr>
        </tbody>
    </table>

    In folgenden Unterweisungen genutzt:
    <ul>
        {% for instruction in keyword.instructions() %}
            <li>{{ instruction.description }}
        {% endfor %}
    </ul>

    <ul>
        <li>
            <a href="{{ path('keyword_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('keyword_edit', { 'id': keyword.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
