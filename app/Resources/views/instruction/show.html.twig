{% extends 'base.html.twig' %}

{% block content %}
    <h1>Instruction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instruction.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ instruction.description }}</td>
            </tr>
            <tr>
                <th>Expiredate</th>
                <td>{% if instruction.expiredate %}{{ instruction.expiredate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Pdflink</th>
                <td>{{ instruction.pdfLink }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Fragen</h2>

    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>Text</th>
          <th>Bild</th>
          <th class="text-md-right">Antworten</th>
          <th class="text-md-right">Aktionen</th>
        </tr>
      </thead>
      <tbody>
      {% for question in instruction.getQuestions() %}
        <tr>
          <td>{{ question.questionText }}</td>
          <td>{{ question.imagePath }}</td>
          <td class="text-md-right">{{ question.getAnswers()|length }}</td>
          <td class="text-md-right">
            <a href="{{ path('question_edit', {'id': question.id }) }}" class="btn btn-primary">
              <i class="fa fa-pencil"></i>
            </a>
            <a class="btn btn-danger">
              <i class="fa fa-times"></i>
            </a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('instruction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('instruction_edit', { 'id': instruction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
