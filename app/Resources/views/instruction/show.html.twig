{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instruction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instruction.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ instruction.description }}</td>
            </tr>
            <tr>
                <th>Expiredate</th>
                <td>{% if instruction.expiredate %}{{ instruction.expiredate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Pdflink</th>
                <td>{{ instruction.pdfLink }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('instruction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('instruction_edit', { 'id': instruction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
