{% extends 'HSDOnSecBundle::base.html.twig' %}
{% set page_title = course.description %}
{% block title %}{{page_title}}{% endblock %}


{% block content %}
    <h1>{{page_title}}</h1>

    <table>
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ course.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Beschreibung</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_index') }}">Zurück zur Liste</a>
        </li>
        <li>
            <a href="{{ path('course_edit', { 'id': course.id }) }}">Speichern</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Löschen">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
