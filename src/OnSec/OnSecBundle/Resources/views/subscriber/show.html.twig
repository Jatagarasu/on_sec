{% extends 'HSDOnSecBundle::base.html.twig' %}

{% block body %}
    <h1>Subscriber</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscriber.id }}</td>
            </tr>
            <tr>
                <th>Subscribtiondate</th>
                <td>{% if subscriber.subscribtionDate %}{{ subscriber.subscribtionDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subscriber_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subscriber_edit', { 'id': subscriber.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
