{% extends 'HSDOnSecBundle::base.html.twig' %}

{% block body %}
    <h1>Abgeschlossene Unterweisung anzeigen</h1>

    <table>
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ completedInstruction.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Ablaufdatum</th>
                <td>{% if completedInstruction.expireDate %}{{ completedInstruction.expireDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('completedinstruction_index') }}">Zurück zur Liste</a>
        </li>
        <li>
            <a href="{{ path('completedinstruction_edit', { 'id': completedInstruction.id }) }}">Bearbeiten</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Löschen">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
