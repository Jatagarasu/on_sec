{% extends 'HSDOnSecBundle::base.html.twig' %}

{% block content %}
    <h1>Frage anzeigen</h1>

    <table>
        <tbody>
            {#<tr>#}
                {#<th>Id</th>#}
                {#<td>{{ question.id }}</td>#}
            {#</tr>#}
            <tr>
                <th>Fragentext</th>
                <td>{{ question.questionText }}</td>
            </tr>
            <tr>
                <th>Pfad zum Bild</th>
                <td>{{ question.imagePath }}</td>
            </tr>
            <tr>
                <th>Erstelldatum</th>
                <td>{% if question.createdOn %}{{ question.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Bearbeitungsdatum</th>
                <td>{% if question.updatedOn %}{{ question.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('question_index') }}">Zurück zur Liste</a>
        </li>
        <li>
            <a href="{{ path('question_edit', { 'id': question.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Löschen">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
