{% extends 'HSDOnSecBundle::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <h1>Schlagw√∂rter</h1>
        </div>
        <div class="col-md-6">
            <a href="{{ path('keyword_new') }}" class="btn btn-outline-success pull-right">neues Schlagwort anlegen</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table-sm table-striped">
                <thead>
                <tr>
                    {#<th>Id</th>#}
                    <th>Beschreibung</th>
                    <th>Aktionen</th>
                </tr>
                </thead>
                <tbody>
                {% for keyword in keywords %}
                    <tr>
                        {#<td>{{ keyword.id }}</td>#}
                        <td><a href="{{ path('keyword_show', { 'id': keyword.id }) }}">{{ keyword.description }}</a>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" style="display: -webkit-box;">
                                <a class="btn btn-primary" href="{{ path('keyword_show', { 'id': keyword.id }) }}"><i
                                            class="fa fa-eye"
                                            aria-hidden="true"></i></a>
                                <a class="btn btn-outline-primary"
                                   href="{{ path('keyword_edit', { 'id': keyword.id }) }}"><i class="fa fa-pencil"
                                                                                              aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
